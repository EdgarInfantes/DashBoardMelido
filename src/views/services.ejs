<%- include("partials/_header") %>

<div class="container mt-5">
  <!-- <div class="row"> -->
    <div class="col-md-5; margin-left 10px" >
      <div class="card-body">
        <form action="/add" method="POST">
          <span style="font-size: 20px; color: aquamarine; margin-left: 150px;;">Agregar Servicio</span>
          <br>
          <input
            type="text"
            name="Descripcion"
            placeholder="Descripcion"
            class="form-control mb-2"
          />
          <select name="IDCategoria" class="form-control mb-2">
            <option value="" selected disabled>Seleccione una categoría</option>
            <option value="1">ICLOUD REMOVE APPLE WATCH (GPS MODELS)</option>
            <option value="2">ICLOUD REMOVE IPADS BY SN (WIFI DEVICES)</option>
            <option value="3">ICLOUD REMOVE IPODS BY SN (WIFI DEVICES)</option>
            <option value="5">IKINGCODE (MDM BYPASS)</option>
            <option value="6">LPRO GSM/MEID [MACOS]</option>
            <option value="7">HFZ MEID/GSM [MAC TOOL]</option>
            <option value="8">HFZ FMI OFF - IWATCH</option>
            <option value="9">HFZ SERVICE (BYPASS)</option>
            <option value="10">IKEY TOOLS [MEID/GSM]</option>
            <option value="11">IREMOVAL PRO [WINDOWSTOOL]</option>
            <option value="12">SMD RAMDISK (MACOS)</option>
            <option value="13">IREMOVE TOOL (ICLOUD BYPASS)</option>
            <option value="14">MEXICO NETWORKS PHONES UNLOCKED</option>
            <option value="15">NETWORK IPHONE UNLOCKED (LATINOAMERICA)</option>
            <option value="16">HONOR SERVICES</option>
            <option value="17">LG UNLOCK</option>
            <option value="18">CHECK DEVICE INFO</option>
            <option value="19">XIAOMI SERVICES</option>
          </select>
          <input
            type="text"
            name="Precio"
            placeholder="Precio"
            class="form-control mb-2"
          />

          <button type="submit" class="btn btn-info">save service</button>
        </form>
      </div>
    </div>
    <br>
    <br>
    <div class="col-md-7">
      <table class="table table-dark table-bordered table-hover">
        <thead>
          <tr>
            <td>n°</td>
            <td>Name</td>
            <td>Categoria</td>
            <td>Precio</td>
            <td>Actions</td>
          </tr>
        </thead>
        <tbody>
          <% if (services) { %> <% for(var i = 0; i < services.length; i++) {
          %>
          <tr>
            <td><%= (i + 1) %></td>
            
            <td><%= services[i].Descripcion %></td>
            <td><%= services[i].IDCategoria %></td>
            <td><%= services[i].Precio %></td>
            <td class="d-flex gap-2">
              <a href="/update/<%= services[i].IDProducto%>" class="btn btn-info">
                Editar
              </a>
              <a href="/delete/<%= services[i].IDProducto%>" class="btn btn-danger">
                Borrar
              </a>
            </td>
          </tr>
          <% } %> <% } %>
        </tbody>
      </table>
    </div>
  <!-- </div> -->
</div>

<%- include("partials/_footer") %>